<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity"
    android:id="@+id/mainactivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">
            <ImageView
                android:id="@+id/main_activity_bg"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="@dimen/_300sdp"
                app:srcCompat="@drawable/background_image_activity"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/navbar"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginBottom="@dimen/_28sdp"
                android:background="@android:color/transparent">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/logo_main"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:contentDescription="@string/navbar_home"
                        android:translationZ="@dimen/_28sdp"
                        app:srcCompat="@drawable/splash_screen_logo_bg" />

                    <TextView
                        android:id="@+id/logo_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:fontFamily="@font/montserrat_bolditalic"
                        android:shadowColor="@color/black"
                        android:shadowDx="6"
                        android:shadowDy="2"
                        android:shadowRadius="1"
                        android:text="Cricket"
                        android:textColor="@color/white" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/premium_btn"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:layout_gravity="end"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:text="Get Premium"
                        app:strokeColor="@color/white"
                        app:strokeWidth="@dimen/_1sdp"
                        app:cornerRadius="@dimen/_2sdp"
                        android:textColor="@color/white"
                        />
                </androidx.appcompat.widget.Toolbar>
            </LinearLayout>

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/menu_option_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintTop_toBottomOf="@+id/navbar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/main_activity_bg"
                android:background="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/home_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:text="Home"
                        android:textSize="@dimen/_12sdp" />

                    <Button
                        android:id="@+id/live_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:text="Live"
                        android:textSize="@dimen/_12sdp" />

                    <com.google.android.material.tabs.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tab_main_layout"
                        app:tabTextColor="@color/white"
                        android:background="@android:color/transparent"
                        app:tabInlineLabel="true"
                        app:tabSelectedTextColor="#002D62"
                        app:tabTextAppearance="@font/montserrat_semibold"
                        app:tabIndicatorColor="#002D62"
                        />

                    <androidx.viewpager2.widget.ViewPager2
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/view_main_pagger"/>
                </LinearLayout>

            </com.google.android.material.appbar.AppBarLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

<!--    <include layout="@layout/content_main" />-->


</androidx.coordinatorlayout.widget.CoordinatorLayout>